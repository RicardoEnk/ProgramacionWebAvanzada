<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Utiliza beginPath, arc y stroke</title>
</head>
<body>
    <canvas id="miCanvas" width="800" height="400"></canvas>
<script>
    const canvas = document.getElementById('miCanvas');
    const ctx = canvas.getContext('2d');

        ctx.strokeStyle = 'black';
        ctx.lineWidth = 2;

        ctx.beginPath();
        ctx.arc(350, 150, 100, 0, 2 * Math.PI);
        ctx.fillStyle = "red";
        ctx.fill();
        ctx.stroke();


        ctx.beginPath();
        ctx.arc(450, 150, 100, 0, 2 * Math.PI);
        ctx.fillStyle = 'rgba(255, 128,0, 0.85)';
        ctx.fill();
        ctx.stroke();


        ctx.beginPath();
        ctx.moveTo(0,0);
        ctx.lineTo(0,400);
        ctx.lineTo(800,400);
        ctx.lineTo(800,0);
        ctx.lineTo(0,0);

        ctx.stroke();



</script>
    
</body>
</html>
