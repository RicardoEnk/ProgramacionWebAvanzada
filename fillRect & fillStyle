    <script>
    
        const canvas = document.getElementById('miCanvas');
        const ctx = canvas.getContext('2d');

    
        ctx.fillStyle = 'black';
        ctx.fillRect(50, 50, 100, 100);

        
        ctx.fillStyle = 'gray';
        ctx.fillRect(125, 125, 100, 100);

       
        ctx.fillStyle = 'rgba(0, 0, 225, 0.5)';
        ctx.fillRect(190, 190, 100, 100);
    </script>
